<%- include('__header', {tab: 2}); %>
<style>
    .float-right{
        float : right;
    }
    .button{
        float : right;
     }
 </style>

<div class="container">
<!-- use populate to get attraction --> 
    <br />
    <h3>Saved Locations</h3>
    <% if(data != null) { %>
        <% data.attractions.forEach(b => { %>
            <% business = JSON.parse(b.json) %>
            <br />
            <div class="card" style="padding: 10px;">
                <div class="row">
                    <div class="col-md-3">
                        <img class="card-img-top" src="<%=business.image_url%>" alt="Card image cap">
                    </div>
                    <div class="col-md-9">
                        <h5 class="card-title"><%= business.name%></h5>
                        <p class="card-text"> <%= business.price %></p>
                        <p class="card-text">Location: <%= business.location.address1 %> , <%=business.location.city%> <%=business.location.zip_code%></p>
                        <p>(<%= business.phone%>)</p>
                        <div class = "container"> 
                            <a href="/delete/<%=b._id%>">
                                <button class = "btn btn-danger float-right" style="margin-right: 60px; vertical-align:middle;"> Delete Attraction </button> 
                            </a>
                        </div>
                        <% business.categories.forEach(e => { %>
                            <span class="badge badge-secondary"><%= e.title %> </span>
                        <% }) %>
                    </div>
                </div>
            </div>            
        <% }) %> 
    <% } %>
</div>

<footer>
