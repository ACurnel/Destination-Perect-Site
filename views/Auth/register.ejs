<%- include('../__header') %>
  <div class="container"><br>

    <h2 class="page-header">Register</h2>
    <% var nameArray = [] %>
    <% if(typeof errors !== 'undefined') { %>
        <div class="alert alert-danger"><ul>
          <% errors.forEach(function(err){ %>
            <% nameArray.push(err.param) %>
            <li><%= JSON.stringify(err) %></li>
          <% }) %>
        </ul></div>
    <% } %>
    <form method="post" action="/u/register">
       <div class="form-group <% if(nameArray.indexOf('name') !== -1) { %> has-warning <% } %>">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Name" name="name" required value="<%= data.name %>">
      </div>
      <div class="form-group <% if(nameArray.indexOf('username') !== -1) { %> has-warning <% } %>">
        <label>Username</label>
        <input type="text" class="form-control" placeholder="Username" name="username" required value="<%= data.username %>">
      </div>
       <div class="form-group <% if(nameArray.indexOf('email') !== -1) { %> has-warning <% } %>">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" required value="<%= data.email %>">
      </div>
      <div class="form-group <% if(nameArray.indexOf('password') !== -1) { %> has-warning <% } %>">
        <label>Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password" required value="<%= data.password %>">
      </div>
      <div class="form-group <% if(nameArray.indexOf('password2') !== -1) { %> has-warning <% } %>">
        <label>Confirm Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password2" required value="<%= data.password2 %>">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
<%- include('../__footer') %>
